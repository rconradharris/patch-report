#!/usr/bin/env python
"""
Refresh patch_report cache.

usage: refresh [--clear-cache]

--clear-cache will clear the cache so that issues can be refreshed

Intended to be run from a cron-job.
"""
import os
import sys


from patch_report import cache
from patch_report.models import github_scanner
from patch_report.models import patch_report


PIDFILE = '/tmp/refresh.pid'

if os.path.exists(PIDFILE):
    sys.exit(1)

with open(PIDFILE, 'w') as f:
    f.write(str(os.getpid()))

try:
    clear_cache = '--clear-cache' in sys.argv[1:]

    if clear_cache:
        cache.clear()
        github_scanner.refresh()

    patch_report.refresh()
finally:
    os.unlink(PIDFILE)
